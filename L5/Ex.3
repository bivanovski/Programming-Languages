public class Exercise3 {

	public static class Animal {
		public String name;

		public Animal() {
			name = "";
		}

		public Animal(String n) {
			name = n;
		}

		public void onomatopoeia() {
			System.out.println("There is no onomatopoeia for" + name);
		}

	}

	public static class Dog extends Animal {
		public void onomatopoeia() {
			System.out.println("Woof" + name);
		}
	}

	public static class Lion extends Animal {
		public void onomatopoeia() {
			System.out.println("Roar" + name);
		}
	}

	public static class Frog extends Animal {
		public void onomatopoeia() {
			System.out.println("Croak" + name);
		}

	}

	public static class Sara_Mountain_Dog extends Dog {
		public void onomatopoeia() {
			System.out.println("Woof Shar" + name);
		}
	}

	public static void main(String[] args) {
		Dog dog = new Dog();
		dog.onomatopoeia();

		Lion lion = new Lion();
		lion.onomatopoeia();

		Frog frog = new Frog();
		frog.onomatopoeia();

		Sara_Mountain_Dog sharko = new Sara_Mountain_Dog();
		sharko.onomatopoeia();

	}

}
