public class Operations {

	public static void main(String[] args) {
		
		float num = (float) (Math.random()*100);
		
		System.out.println("Sine: " + Math.sin(num));
		System.out.println("Cosine: " + Math.cos(num));
		System.out.println("Tangent: " + Math.tan(num));
		System.out.println("Cotangent: " + 1/Math.tan(num));
		System.out.println("Square root: " + Math.sqrt(num));
		System.out.println("Square: " + Math.pow(num,2));
		System.out.println("Cube: " + Math.pow(num,3));
		System.out.println("Smallest larger integer: " + Math.ceil(num));
		System.out.println("Largest smallest integer: " + Math.floor(num));
		
		float r = num;
		float area = (float) (Math.pow(r,2) * Math.PI);
		
		System.out.println("Area: " + area);
		
		System.out.println("PI: " + Math.PI);
		System.out.println("E: " + Math.E);
		
		
		

	}

}
